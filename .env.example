# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ERP API Configuration
VITE_API_BASE_URL=/api/erp
VITE_ERP_USERNAME=AppUser

# Local Storage Encryption (Optional but Recommended)
# If not provided, app derives a non-static fallback key
VITE_STORAGE_KEY=replace_with_random_long_value

# Gemini Client (INSEGURO - solo para desarrollo local)
# En producci√≥n usar proxy backend y NO exponer la clave en frontend
VITE_ALLOW_INSECURE_GEMINI_CLIENT=false
VITE_GEMINI_API_KEY=
